---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Terms of Service - SMSPM">
    <Navigation />

    <main class="pt-[120px] pb-20">
        <section class="py-16">
            <div class="container mx-auto px-8 max-w-4xl">
                <h1
                    class="text-4xl lg:text-6xl font-extrabold mb-8 text-dynamic-primary"
                >
                    Terms of Service
                </h1>
                <div
                    class="prose prose-lg dark:prose-invert max-w-none text-dynamic-secondary space-y-6"
